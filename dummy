package com.example.dm.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;


import com.example.dm.annotation.MaskField;
import com.example.dm.annotation.MaskingType;
import com.example.dm.entity.EmpUser;
import com.example.dm.repository.UserRepository;
import com.example.dm.util.MaskingUtil;

@Service
public class EmpService {

	@Autowired
	private UserRepository userRepo;
	@Autowired
	private MaskingUtil maskUtil;
	
//	public EmpService (UserRepository userRepo, MaskingUtil maskUtil) {
//		this.userRepo=userRepo;
//		this.maskUtil=maskUtil;
//	}
		
	
	@MaskField(type= {MaskingType.PHONE_NUMBER, MaskingType.EMAIL}) 
	public EmpUser getUserById(Long id) {
		
		EmpUser user=userRepo.findById(id).orElse(null);
		if(user !=null) {
			return  maskUtil.maskData(user,new MaskingType[]{MaskingType.PHONE_NUMBER,MaskingType.EMAIL});
		}
		return null;
	}
	
	
	//@MaskField(type= {MaskingType.PHONE_NUMBER, MaskingType.EMAIL})
	public EmpUser saveUser(EmpUser empUser) {
		
		EmpUser user=userRepo.save(empUser);
		return user;
	}





	//@MaskField(type= {MaskingType.PHONE_NUMBER, MaskingType.EMAIL}) 
	public List<EmpUser> getusers() {
		List<EmpUser> userss = userRepo.findAll();
		//return  maskUtil.maskData(userss,new MaskingType[]{MaskingType.PHONE_NUMBER,MaskingType.EMAIL});
		return maskUtil.maskData(userss, new MaskingType[] {MaskingType.PHONE_NUMBER, MaskingType.EMAIL});
		//return userRepo.findAll();
	}
}

	
